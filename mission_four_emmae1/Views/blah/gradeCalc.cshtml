@{
    ViewData["Title"] = "Grade Calc - IS 415 Mission 5";
}

@model gradeCalcModel 
 
<div class="container-fluid text-center">
    <div class="row content">
        <!--side column 1 (couldn't figure out how to extend it all the way)-->
        <div class="col-sm-2 sidenav">
        </div>

        <!--center column-->
        <div class="col-sm-8 text-left">
            <div class="row">
                <!--grade calculator form-->
                <div>
                    <h3>Grade Calculator</h3>
                    <h6>Enter your grade as a percent for each category</h6>
                    <form method="post">
                        <label>Assignments: </label>
                        <input id="assignments" asp-for="assignments" /> <br />
                        <label>Group Project: </label>
                        <input id="groupProject" asp-for="groupProject"/> <br />
                        <label>Quizzes: </label>
                        <input id="quizzes" asp-for="quizzes"/> <br />
                        <label>Midterm Exam: </label>
                        <input id="midtermExam" asp-for="midtermExam"/> <br />
                        <label>Final Exam: </label>
                        <input id="finalExam" asp-for="finalExam"/> <br />
                        <label>Intex: </label>
                        <input id="intex" asp-for="intex"/> <br />
                        <input type="submit" id="btnSend" value="Calculate Grades" />
                        <div asp-validation-summary="All"></div>
                    </form>
                </div>
            </div>
        </div>
        <!--second side column-->
        <div class="col-sm-2 sidenav">
        </div>
    </div>
</div>

<!--bring in javascript-->
<script src="~/js/grade_calc.js"></script>